generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transactions{
  id        Int      @id @default(autoincrement())
  type      String
  price     Float
  amount    Float
  timestamp DateTime @default(now())
}

model Balances {
  id          Int      @id @default(autoincrement())
  eth_balance Float
  usd_balance Float
  timestamp   DateTime @default(now())
}
